<div class="col-lg-3 text-center"  id="div-deal-action">
  <div class="text-center" style="height: 40%;">
    <div id="deal_num">
      <% if @current_number.nil? %>
        <button class="btn-number-ready">
          Ready
        </button>
      <% else %>
        <button class="btn-number-deal-current">
          <%= @current_number %>
        </button>
      <% end %>
    </div>
    <%= button_to "DEAL", { action: "add" }, { id: 'deal_btn', remote: true, method: 'post', class: "btn btn-primary btn-lg"} %>
    <div id="end_status"></div>
  </div>
  <div id="qr-area">
    <h4>Join with us</h4>
    <%= image_tag @qr %>
  </div>
</div>
